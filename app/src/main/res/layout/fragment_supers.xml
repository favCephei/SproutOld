<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="studiocephei.sprouttech.FragmentOverview">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">


        <TextView
            android:id="@+id/tv_fundname1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:textColor="@color/Blue"
            android:padding="10dp"
            />


        <TextView
            android:layout_marginTop="3dp"
            android:textColor="#000000"

            android:id="@+id/tv_funddetails1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:padding="10dp"

            />

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@color/Blue"

            android:id="@+id/tv_fundname2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"

            android:background="@color/White"/>


        <TextView
            android:layout_marginTop="3dp"
            android:textColor="#000000"

            android:id="@+id/tv_funddetails2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"

            android:background="@color/White"/>

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@color/Blue"

            android:id="@+id/tv_fundname3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/White"/>


        <TextView
            android:layout_marginTop="3dp"
            android:textColor="#000000"
            android:id="@+id/tv_funddetails3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"

            android:background="@color/White"/>




        <Button
            android:id="@+id/btn_consolidate"
            android:background="@color/White"
            android:textColor="@color/DarkBlue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="20dp"
            android:textSize="32dp"
            android:text="@string/txt_consolidate"/>




    </LinearLayout>




</FrameLayout>
